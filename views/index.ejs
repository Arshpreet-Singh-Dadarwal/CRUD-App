<%- include('layout/header') %>

<div class="container" style="padding: 23px;">
    <div class="row">
        <div class="col-lg-12">
            <% if(typeof message !== 'undefined' && message) { %>
                <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                    <strong><%= message.message %></strong>
                </div>
            <% } %>
            <div class="table-responsive">
                <% if(users && users.length > 0) { %>
                    <table class="table table-striped text-center my-3">
                        <thead>
                            <tr class="table-dark">
                                <th>ID</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>E-Mail</th>
                                <th>Phone</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach((row, index) => { %>

                                <tr class="align-middle ">
                                    <td><%= index + 1 %></td>
                                    <td><img src="/uploads/<%= row.image %>" class="img-thumbnail" alt="User Image" style="width: 50px; height: 50px; object-fit: cover;"></td>
                                    <td><%= row.name %></td>
                                    <td><%= row.email %></td>
                                    <td><%= row.phone %></td>
                                    <td>
                                        <a href="/edit/<%= row._id %>" class="text-success">
                                            <i class="fas fa-edit fa-lg mx-1"></i>
                                        </a>
                                        <a href="/delete/<%= row._id %>" class="text-danger">
                                            <i class="fas fa-trash fa-lg mx-1"></i>
                                        </a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">No User in the Database</h1>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>
